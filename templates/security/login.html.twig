{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block navbar %}{% endblock %}
{% block content %}
<!-- component -->
<div class="flex justify-center m-12 h-36 w-auto">
    <img src="{{ asset('/images/gsblogo.png')}}" alt="">
</div>

<div class="flex items-center justify-center">
    <div class="w-full max-w-md">
        <form class="bg-white shadow-lg rounded px-12 pt-6 pb-8 mb-4" action="{{ path('login') }}" method="POST">
            <!-- @csrf -->  
            <div class="text-gray-800 text-2xl flex justify-center border-b-2 py-2 mb-4">
                Connexion
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-normal mb-2" for="username">
                    Identifiant
                </label>
                <input
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                    name="_username"
                    type="text"
                    value="{{ last_username }}"
                    required
                    placeholder="Identifiant"
                />
            </div>
            <div class="mb-6">
                <label class="block text-gray-700 text-sm font-normal mb-2" for="password">
                    Mot de passe
                </label>
                <input
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
                    type="password"
                    placeholder="Mot de passe"
                    name="_password"
                    required
                />
            </div>
            <div class="flex justify-center" >
                <button class="px-4 py-2 rounded text-white inline-block shadow-lg bg-blue-500 hover:bg-blue-600 focus:bg-blue-700" type="submit">Se connecter</button>
            </div>
        {% if error %}    
        <br>      
            <span class="text-red-500 flex justify-center">Identifiants incorrects</span>         
        {% endif %}
        </form>
            <p class="text-center text-gray-500 text-xs">
                &copy;2021 GSB - Eric BARNET - Tous droits réservés
            </p>
        </div>
      </div>
    

{% endblock %}
{% block footer %}{% endblock %}

